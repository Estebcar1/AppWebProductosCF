@model IEnumerable<AppWebProductosCF.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categoria</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary"><i class="fas fa-user-edit"></i> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @{
                        if (item.Estado == true)

                        {
                            <span>activo</span>
                        }
                        else
                        {
                            <span> No AcTIVO </span>
                        }
                    }
                    
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoriaID" class="btn btn-outline-success fas fa-edit"></a> |
                    <a asp-action="Details" asp-route-id="@item.CategoriaID" class="btn btn-outline-info"><i class="far fa-newspaper"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoriaID" class="btn btn-outline-danger"> <i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
