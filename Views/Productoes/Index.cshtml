@model IEnumerable<AppWebProductosCF.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary"><i class="fas fa-user-edit"></i> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio_venta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio_venta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @{ if (item.Estado == true)
                        {
                            <span>  Activo</span>
                        }
                        else
                        {
                            <span>  No Activo</span>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductoID" class="btn btn-outline-success"> <i class="fas fa-edit"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.ProductoID" class="btn btn-outline-info far fa-newspaper"></a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductoID" class="btn btn-outline-danger fas fa-trash-alt"></a>
                </td>
            </tr>
        }
    </tbody>
</table>
